<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TabHost
        android:layout_width="481dp"
        android:layout_height="505dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="422dp"
            android:layout_height="503dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="422dp"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:layout_weight="wrap_content"
                    app:srcCompat="@android:drawable/checkbox_on_background" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_weight="wrap_content"
                    app:srcCompat="@android:drawable/sym_action_email" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="wrap_content"
                    app:srcCompat="@android:drawable/ic_search_category_default" />

            </LinearLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="52dp" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="453dp">

                <LinearLayout
                    android:id="@+id/Home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="108dp"
                        tools:srcCompat="@tools:sample/backgrounds/scenic[1]" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="478dp"
                        android:layout_height="32dp"
                        android:text="CheckOut What is happening on twitter"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:text="Brier Avil"
                        android:textColor="@android:color/background_dark"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="422dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            tools:srcCompat="@tools:sample/avatars[6]" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="112dp"
                            android:text="All these tweets about gmail and macs are suffocating me... someone tweet about their sandwich or something, plz."
                            android:textSize="16sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="422dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="48dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/btn_star" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="42dp"
                            android:layout_height="match_parent"
                            android:layout_weight="wrap_content"
                            app:srcCompat="?attr/actionModeCloseDrawable" />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="46dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_rotate" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="422dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editText"
                            android:layout_width="286dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="What's happening" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="48dp"
                            android:layout_height="44dp"
                            android:layout_weight="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_report_image" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_weight="wrap_content"
                            app:srcCompat="@android:drawable/ic_menu_camera" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Discovery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</android.support.constraint.ConstraintLayout>